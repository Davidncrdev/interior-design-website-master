---
import MainLayout from '../layouts/main-layout.astro'
import One from "../icons/one.tsx"
import Two from "../icons/two.tsx"
import Three from "../icons/three.tsx"
import Four from "../icons/four.tsx"
import ServiceIconOne from "../icons/service1-icon.tsx"
import ServiceIconTwo from "../icons/service2-icon.tsx"
import ServiceIconThree from "../icons/service3-icon.tsx"
import ServiceIconFour from "../icons/service4-icon.tsx"


const services = [
{
    title: 'Diseño Web',
    text: 'Creamos páginas web modernas, funcionales y personalizadas para destacar tu marca en el mundo digital.'
},
{
    title: 'Optimización SEO',
    text: 'Mejoramos tu visibilidad en motores de búsqueda para que tus clientes te encuentren fácilmente.'
},
{
    title: 'Marketing Digital',
    text: 'Diseñamos campañas efectivas que conectan con tu audiencia y aumentan tus conversiones.'
},
{
    title: 'Marca personal',
    text: 'Te ayudamos a definir y destacar tu identidad única en el entorno digital, posicionándote como un referente en tu industria.'
},
{
    title: 'E-commerce',
    text: 'Desarrollamos tiendas en línea adaptadas a tus necesidades para que vendas más y mejor.'
},
{
    title: 'Identidad de Marca',
    text: 'Creamos identidades visuales impactantes que reflejan la esencia y valores de tu negocio.'
},


]



const howWeWorkDetails = [
{
    imgIcon: ServiceIconOne,
    numIcon: One,
    img: '/service1.png',
    title: 'Análisis y Estrategia',
    info: 'Comenzamos con una reunión para entender tus necesidades, definir tus objetivos y desarrollar un plan estratégico personalizado.'
},
{
    imgIcon: ServiceIconTwo,
    numIcon: Two,
    img: '/service2.png',
    title: 'Propuesta Creativa',
    info: 'Presentamos ideas innovadoras y soluciones adaptadas a tu marca, asegurándonos de alinear cada detalle con tu visión.'
},
{
    imgIcon: ServiceIconThree,
    numIcon: Three,
    img: '/service3.png',
    title: 'Diseño y Desarrollo',
    info: 'Transformamos tus ideas en realidad a través de un diseño excepcional y una ejecución técnica impecable.'
},
{
    imgIcon: ServiceIconFour,
    numIcon: Four,
    img: '/service4.png',
    title: 'Entrega y Optimización',
    info: 'Entregamos resultados finales de alta calidad y seguimos optimizando para garantizar el éxito continuo de tu proyecto.'
},

]
---


<MainLayout title = 'Interior Design Services'>

  <!-- Banner Section -->

  <section class="w-full bg-services h-[50vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200 ">Servicios</h1>
      <p class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"> <a href="/">Inicio</a> / Servicios </p>
    </div>
  </section>

  	<!-- Services Section -->

	<section class="lg:max-w-[1200px] grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 lg:gap-y-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full col-span-1 max-w-[358px] mx-auto flex rounded-[30px] hover:bg-primary-300 px-5 py-[83px] flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center"> {service.text}</p>
						
					</div>
				)
			})
		}
	</section>

  <!-- How We Work Section -->
  <section class="px-12 xl:px-0 w-full mt-[100px] lg:mt-[200px] min-h-screen ">
   <div class="w-full lg:max-w-[1200px] p-12 mx-auto lg:px-[116px] lg:py-[160px] bg-primary-300 rounded-[70px] ">
     <h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full capitalize lg:max-w-[50%] pb-2 mx-auto">Como trabajamos</h2>
		<p class="text-base md:text-[22px] text-center tracking-tight font-jost text-text-gray leading-[33px] lg:max-w-[90%] mx-auto">Nuestra metodología de trabajo garantiza un seguimiento completo y detallado en cada etapa del proceso, desde la planificación inicial hasta la entrega final. Además, ofrecemos un enfoque continuo para el mantenimiento y la optimización de los proyectos, asegurando resultados sostenibles y de alta calidad.</p>

    <div class="pt-[70px] lg:pt-[100px] flex flex-col gap-[70px] ">
      <!-- Inner Sections -->

      {
        howWeWorkDetails.map((detail, index) => {
          const ImageIcon = detail.imgIcon
          const NumberIcon = detail.numIcon
          const className = `flex justify-between flex-col ${index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"} gap-[50px] items-center max-w-[967px]`

          return(
            <div class={className}>
              <img src={detail.img} alt=""/>
              <div class="flex flex-col gap-12 lg:gap-[58px]">
                <div class="justify-between hidden lg:flex">
                  <ImageIcon />
                  <NumberIcon/>
                </div>
                <div class="flex flex-col gap-3">
                  <h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{detail.title}</h3>
                  <p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px]">{detail.info}</p>
                </div>
              </div>
            </div>
          )
        })
      }

      <!-- Inner Sections End -->
    </div>
   </div>
  </section>

</MainLayout>

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>